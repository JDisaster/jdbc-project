<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.PrimaryController">

    <!-- TOP: profile + student ID on left, View Classes button on right -->
    <top>
        <HBox alignment="CENTER" spacing="0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Left: profile + ID -->
            <VBox alignment="TOP_LEFT" spacing="5">
                <ImageView fx:id="profileImageView"
                           fitWidth="80" fitHeight="80"
                           preserveRatio="true" />
                <Label fx:id="studentIdLabel" />
            </VBox>

            <!-- Spacer -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Right: View Classes -->
            <Button text="View Classes" onAction="#goToClasses" />
        </HBox>
    </top>

    <!-- CENTER: enrolled classes table -->
    <center>
        <Label text="THIS IS PRIMARY.FXML" />
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Enrolled Classes"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <TableView fx:id="enrolledTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="enrolledCodeColumn"
                                 text="Code" prefWidth="80"/>
                    <TableColumn fx:id="enrolledNameColumn"
                                 text="Name" prefWidth="260"/>
                    <TableColumn fx:id="enrolledCreditsColumn"
                                 text="Credits" prefWidth="70"/>
                    <TableColumn fx:id="enrolledDeptColumn"
                                 text="Department" prefWidth="120"/>
                    <TableColumn fx:id="enrolledMajorColumn"
                                 text="Major" prefWidth="120"/>
                    <TableColumn fx:id="enrolledSemesterColumn"
                                 text="Semester" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
