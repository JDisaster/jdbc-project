<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.PrimaryController">

    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="10" left="10" right="10" bottom="5"/>
            </padding>

            <VBox spacing="4">
                <Label fx:id="studentIdLabel"
                       text="Student ID: (not set)"/>

                <Label fx:id="studentNameLabel"
                       text="Name: (not loaded)"/>

                <Label fx:id="studentMajorLabel"
                       text="Major: (not loaded)"/>

                <Label fx:id="studentSemesterLabel"
                       text="Current Semester: (not loaded)"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <VBox spacing="5">
                <Button text="View Classes"
                        onAction="#goToClasses"/>

                <Button fx:id="dropClassesButton"
                        text="Drop Classes"
                        onAction="#handleDropClasses"
                        disable="true"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
            <padding>
                <Insets top="5" left="10" right="10" bottom="10"/>
            </padding>

            <Label text="Enrolled Classes"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="enrolledTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="enrolledSelectColumn"
                                 text="" prefWidth="40"/>

                    <TableColumn fx:id="enrolledCodeColumn"
                                 text="Code" prefWidth="80"/>

                    <TableColumn fx:id="enrolledNameColumn"
                                 text="Name" prefWidth="260"/>

                    <TableColumn fx:id="enrolledCreditsColumn"
                                 text="Credits" prefWidth="70"/>

                    <TableColumn fx:id="enrolledDeptColumn"
                                 text="Department" prefWidth="120"/>

                    <TableColumn fx:id="enrolledMajorColumn"
                                 text="Major" prefWidth="120"/>

                    <TableColumn fx:id="enrolledSemesterColumn"
                                 text="Semester" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
