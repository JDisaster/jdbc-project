<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.LoginController"
            stylesheets="@landing.css">
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="2" style="-fx-font-size: 24px;"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="studentEmailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Button text="Login" onAction="#handleLogin"
                    GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label fx:id="messageLabel" GridPane.columnIndex="0" GridPane.rowIndex="4"
                   GridPane.columnSpan="2" />

            <Button text="Login" onAction="#handleLogin"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Hyperlink text="No account? Create one"
                    onAction="#goToSignup"
                    GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label fx:id="messageLabel"
                GridPane.columnIndex="0" GridPane.rowIndex="5"
                GridPane.columnSpan="2" />


        </GridPane>
    </center>
</BorderPane>
